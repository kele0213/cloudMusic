page {
  background-color: #bfcbd6;
}

.authority .title image {
  width: 50rpx;
  height: 50rpx;
  padding-right: 10rpx;
}

.title {
  display: flex;
  align-items: center;
  font-size: 35rpx;
  font-weight: 700;
  margin: 20rpx;
  margin-bottom: 0;
}

.authorityItem {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin: 30rpx 20rpx;
  padding: 30rpx 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
}

.itemTitle {
  font-size: 40rpx;
  font-weight: 700;
  padding-bottom: 20rpx;
}

.itemInfo{
  display: flex;
}
.image {
  position: relative;
  width: 200rpx;
  height: 200rpx;
}
.image .one {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  z-index: 3;
}
.image .two {
  position: absolute;
  bottom: 0;
  left: 60rpx;
  width: 150rpx;
  height: 150rpx;
  z-index: 2;
  opacity: 0.5;

}
.image .three {
  position: absolute;
  bottom: 0;
  left: 120rpx;
  width: 100rpx;
  height: 100rpx;
  z-index: 1;
  opacity: 0.3;
}
.musicInfo {
  width: 70%;
  margin-left: 50rpx;
}

.musicItem {
  display: flex;
  align-items: center;
  padding: 12rpx 0rpx;
}
.musicItem .num {
  min-width: 40rpx;
  text-align: center;
  font-size: 32rpx;
  padding-right: 10rpx;
  font-weight: 700;
}

.musicItem .musicName {
  font-size: 32rpx;
  padding-right: 10rpx;
  font-weight: 700;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  /* 设置对齐模式 */
  -webkit-box-orient:vertical ;
  /* 设置盒子的行数 */
  -webkit-line-clamp: 1;
}

.musicItem .singer {
  font-size: 24rpx;
  padding-top: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  /* 设置对齐模式 */
  -webkit-box-orient:vertical ;
  /* 设置盒子的行数 */
  -webkit-line-clamp: 1;
}

.allListInfo {
  display: flex;
  flex-wrap: wrap;
  padding-top: 20rpx;
  padding-left:20rpx
}

.allListInfo .allListItem {
  width: 30%;
  padding-right: 3%;
  padding-bottom: 10rpx;
}

.allListInfo .allListItem image {
  width: 100%;
}
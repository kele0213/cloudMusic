/* pages/personal/personal.wxss */
page{
  background-color: rgba(209, 207, 207, 0.5);
}
.personal {
  height: 100vh;
}
.personal .header {
  height: 40%;
  background-color: #000;
}

.header image{
  width: 100%;
  z-index: -1;
}

.userinfo {
  position: relative;
  margin: 0rpx 40rpx;
  height: 25%;
  background-color: rgba(255,255,255,.8);
  border-radius: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 1;
}

.userinfo .touxiang {
  position: absolute;
  top:-100rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius:50%;
}
.info{
  margin-top: 120rpx;
}

.info .nickName{
  font-size: 36rpx;
  font-weight: 700;
  text-align: center;
}

.edit {
  margin-top: 30rpx;
  border-radius: 40rpx;
  border: 1px solid #ddd;
}

.content {
  margin-top: 30rpx;
}

.like {
  display: flex;
  padding: 30rpx;
  margin: 20rpx 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
}

.like image{
  width: 120rpx;
  height: 120rpx;
}
.likeInfo {
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.likeInfo .title {
  font-size: 34rpx;
  font-weight: 700;
}
.likeInfo .count {
  font-size: 24rpx;
  padding-top: 10rpx;
}
.hidden {
  display: none;
}
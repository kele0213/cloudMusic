page{
  background-color: rgba(209, 207, 207, 0.5);
}


.title {
  position: fixed;
  width: 100%;
  height: 100rpx;
  background-color: rgba(209, 207, 207);
  font-size: 40rpx;
  font-weight: 700
}

.infoMusic {
  background-color: #fff;
  border-radius: 20rpx;
  min-height: 100vh;
}

.header {
  padding: 30rpx 60rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #ddd;
}
.header .iconfont{
  padding-top: 7rpx;
  padding-left: 20rpx;
  font-size: 40rpx;
  color: red;
}

.content {
  display: flex;
  flex-direction: column;
}

.musicItem {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.musicItem .num {
  padding: 0rpx 40rpx;
  text-align: center;
}

.musicInfo {
  width: 75%;
}

.musicItem .musicName {
  font-size: 34rpx;
  font-weight: 700;
}

.musicItem .singer {
  font-size: 24rpx;
  margin-top: 10rpx;
  color: rgb(146, 145, 145);
}

.musicItem .btn {
  position: absolute;
  right: 40rpx;
}
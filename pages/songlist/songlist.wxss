page {
  background-color: rgba(75, 129, 104, 0.5);
}


.header {
  margin-top: 190rpx;
}

.songList {
  height: 100vh;
}
.header {
  height: 30%;
  padding: 0rpx 30rpx;
}

.listTitle {
  display: flex;
}

.listTitle .coverImg{
  min-width: 200rpx;
  min-height: 200rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 30rpx;
}

.listInfo {
  padding-left: 30rpx;
}
.listInfo .listName{
  font-size: 35rpx;
  font-weight: 700;
}

.creator {
  display: flex;
  padding-top: 20rpx;
  align-items: center;
}

.creator .creatorImg {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.creator .nickName {
  font-size: 28rpx;
  padding-left: 10rpx;
}

.playNum {
  padding-top: 20rpx;
  font-size: 30rpx;
  color:rgb(161, 38, 100)
}

.buttonList {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
  padding: 0rpx 20rpx;
}
.buttonList .iconfont {
  color: red;
  padding-right: 10rpx;
  padding-top: 5rpx;
}
.buttonList view{
  min-width: 150rpx;
  display: flex;
  justify-content: center;
  font-size: 34rpx;
  padding: 15rpx;
  background-color: rgba(255,255,255,.5);
  border-radius: 40rpx ;
}

.description {
  margin: 20rpx 0;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  /* 设置对齐模式 */
  -webkit-box-orient:vertical ;
  /* 设置盒子的行数 */
  -webkit-line-clamp: 1;
}

.content {
  min-height: 70%;
  background-color: #fff;
  border-radius: 50rpx;
}


.content .title {
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1px solid #ddd;
}
 
.pdlf {
  padding-top: 10rpx;
  padding-left: 30rpx;
}

.content .iconfont {
  font-size: 40rpx;
}

.musicItem {
  padding: 20rpx 40rpx;
  display: flex;
  align-items: center;
}
.musicItem .num {
  min-width: 40rpx;
  text-align: center;
}
.musicItem .musicInfo{
  padding-left: 40rpx;
}

.musicInfo{
  width: 80%;
}

.musicInfo .musicName{
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  /* 设置对齐模式 */
  -webkit-box-orient:vertical ;
  /* 设置盒子的行数 */
  -webkit-line-clamp: 1;
}
.musicInfo .singer{
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  /* 设置对齐模式 */
  -webkit-box-orient:vertical ;
  /* 设置盒子的行数 */
  -webkit-line-clamp: 1;
}
.musicItem .btn {
  position: absolute;
  right: 60rpx;
  text-align: right;
}